<!DOCTYPE html>
<%
  local path=''
  for _ in string.gmatch(file,'[^/]+/') do
    path=path..'../'
  end
%>
<html>
  <head>
    <meta charset="utf-8"/>
    <title><%= title %> - <%= project.title %></title>
    <link rel="stylesheet" href="<%- path .. (project.hljsstyle or 'monokai') -%>.css" />
    <link rel="stylesheet" href="<%- path -%>style.css" />
    <script type="text/javascript" src="<%- path -%>hljs.js"></script>
    <script type="text/javascript">hljs.initHighlightingOnLoad();</script>
    <% if css then %>
      <%- table.concat(css, '') %>
    <% end %>
  </head>
  <body>
    <aside class="sidebar">
      <div class="head">
        <%= project.title %>
      </div>
      <ul>
        <%
          for _, f in ipairs(project.files) do
            ft = f:gsub('%.[^%.]+$',''):gsub('/', '.')
            fl = f:gsub('%.[^%.]+$','.html')
        %>
          <li>
            <a href="<%- path..fl -%>"><%- ft -%></a>
          </li>
        <% end %>
      </ul>
    </aside>
    <section class="header">
      <h1><%= title %> - <%= project.title %></h1>
      <% if date and author then %>
        <span class="copy">&copy; <%= date %> <%= author %></span>
      <% end %>
    </section>
    <% if index then %>
      <aside class="index">
        <div class="head">
          <%= title %>
        </div>
        <%- index %>
      </aside>
    <% end %>
    <section class="body">
      <%- body %>
    </section>
  </body>
</html>
